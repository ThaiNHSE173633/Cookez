@model BusinessObjects.Models.Ingredient

<form method="post" enctype="multipart/form-data">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-success">Create Ingredient</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label for="name" class="form-label font-weight-bold">Name</label>
            <div class="form-control" id="name">@Model.Name</div>
        </div>
        <div class="mb-3">
            <label for="image">Image</label>
            <div class="mb-3">
                <img src="@Model.ImgPath" class="img-fluid" style="max-width: 200px; height: auto;">
            </div>
        </div>
        <div class="mb-3">
            <label for="description">Description</label>
            <div class="form-control" id="description">@Model.Description</div>
        </div>
        <div class="mb-3">
            <label for="category">Category</label>
            <div class="form-control" id="category">@Model.FkCategory.Name</div>
        </div>
    </div>
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-warning mt-3" style="width: 10%;">Back to dashboard</a>
</form>
@model IEnumerable<Ingredient>

@{
    ViewBag.Title = "Ingredient";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a class="btn btn-success fw-bold" asp-action="Create"><span class="fa-solid fa-folder-plus"></span> New Ingredient&nbsp;</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th style="width: 11%;">
                Ingredient Name
            </th>
            <th>
                Image Path
            </th>
            <th>
                Description
            </th>
            <th style="width: 8%;">
                Category ID
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImgPath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FkCategoryId)
                </td>
                <td style="width: 1%;">
                    <a style="" class="btn btn-warning text-light" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                </td>
                <td style="width: 1%;">
                    <a class="btn btn-info text-light"  asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
                <td style="width: 1%;">
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

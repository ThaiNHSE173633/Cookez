@model IEnumerable<Ingredient>
@{
    ViewBag.Title = "Ingredient";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="px-0">
        <br />
        <div class="col-5">
            <a asp-controller="Ingredients" asp-action="Create" class="btn btn-success fw-bold text-light mt-2"><i class="fa-solid fa-folder-plus"></i> New Ingredient</a>
        </div>
        <br />
        <table class="table table-striped table-bordered w-100">
            <thead class="table-dark">
                <tr>
                    <th style="width: 11%;">
                        Ingredient Name
                    </th>
                    <th>
                        Image Path
                    </th>
                    <th>
                        Description
                    </th>
                    <th style="width: 8%;">
                        Category ID
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ImgPath)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FkCategoryId)
                        </td>
                        <td style="width: 1%;">
                            <a style="" class="btn btn-warning text-light" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </td>
                        <td style="width: 1%;">
                            <a class="btn btn-info text-light" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </td>
                        <td style="width: 1%;">
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

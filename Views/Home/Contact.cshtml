﻿@{
    ViewData["Title"] = "Contact us";
}
@inject SignInManager<Account> SignInManager
@using Microsoft.AspNetCore.Identity;
@inject UserManager<Account> UserManager



<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Contact</title>
    <style>
        .form-control {
            height: 54px;
            border-color: rgba(0, 0, 0, 0.1);
            background-color: transparent !important;
            margin-bottom: 10px;
        }

        .button {
            padding: 15px 20px;
            border-radius: 4px;
            border-color: none;
            font-size: 12px;
            font-weight: 600;
            letter-spacing: .1rem;
            text-transform: uppercase;
            background-color: #e7f9fd;
        }

            .button:hover {
                border-color: #e7f9fd;
            }

        .form-control {
            background-color: white;
        }
    </style>
</head>

<body>
    <div class="py-5 color-change">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-lg-6">
                    <h1 class="heading text-color-change" data-aos="fade-up">Contact Us</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="py-5">
        <div class="container">

            <div class="row">
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <div class="d-flex mt-2">
                        <i class="fa-sharp fa-solid fa-location-dot fa-2xl" style="line-height: normal;"></i>
                        <div class="ps-4">
                            <h4 class="mb-2 text-color-change" style="font-size: 16px;">Location:</h4>
                            <p style="font-size: 14px; color: grey;">43 Raymouth Rd. Baltemoer,<br> London 3910</p>
                        </div>
                    </div>

                    <div class="d-flex mt-4">
                        <i class="fa-solid fa-clock fa-xl" style="line-height: normal;"></i>
                        <div class="ps-4">
                            <h4 class="mb-2 text-color-change" style="font-size: 16px;">Open Hours:</h4>
                            <p style="font-size: 14px; color: grey;">
                                Sunday-Friday:<br>
                                11:00 AM - 2300 PM
                            </p>
                        </div>
                    </div>

                    <div class="d-flex mt-4">
                        <i class="fa-solid fa-envelope fa-xl" style="line-height: normal;"></i>
                        <div class="ps-4">
                            <h4 class="mb-2 text-color-change" style="font-size: 16px;">Email:</h4>
                            <p style="font-size: 14px; color: grey;">info@Untree.co</p>
                        </div>
                    </div>

                    <div class="d-flex mt-4">
                        <i class="fa-solid fa-phone fa-xl" style="line-height: normal;"></i>
                        <div class="ps-4 text-color-change">
                            <h4 class="mb-2 text-color-change" style="font-size: 16px;">Call:</h4>
                            <p style="font-size: 14px; color: grey;">+1 1234 55488 55</p>
                        </div>
                    </div>

                </div>
                <div class="col-lg-8">
                    <form>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <input type="text" id="name" class="form-control text-color-change" placeholder="Your Name">
                            </div>
                            <div class="col-6 mb-3">
                                <input type="email" id="email" class="form-control text-color-change" placeholder="Your Email">
                            </div>
                            <div class="col-12 mb-3">
                                <input type="text" class="form-control text-color-change" placeholder="Subject">
                            </div>
                            <div class="col-12 mb-3">
                                <textarea id="message" cols="30" rows="7" class="form-control textarea text-color-change"
                                          placeholder="Message" style="
                                    min-height: 168px;
                                "></textarea>
                            </div>
                            <div class="app-form-group message">
                                @if (SignInManager.IsSignedIn(User)) {
                                    <input id="userid" class="text-color-change" type="hidden" value="@UserManager.GetUserAsync(User).Result.Id" />
                                } else {
                                    <input id="userid" class="text-color-change" type="hidden" value="" />
                                }

                            </div>
                            <div class="col-12">
                                <button type="submit" class="button" id="sendContactBtn">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="~/lib/jquery-3.7.0.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script>
    $("#sendContactBtn").click(function (event) {
        // Get the form values
        event.preventDefault(); // Prevent form submission and page reload
        var name = $("#name").val();
        var email = $("#email").val();
        var message = $("#message").val();
        var userId = $("#userid").val();
        console.log(name + email + message + userId);

        var formData = new FormData();
        formData.append("UserName", name);
        formData.append("Email", email);
        formData.append("Message", message);
        formData.append("UserId", userId);

        console.log(formData);


        $.ajax({
            url: '/Contacts/CreateAjax',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
                if (response.success) {
                    // Handle success response
                    toastr.success('Contact created successfully!');
                } else {
                    // Handle failure response
                    toastr.error('Failed to create contact.');
                }
            },

            error: function (xhr, status, error) {
                // Handle error
                alert('An error occurred while creating the contact.');
            }
        });
        // Clear input values
        $("#name").val("");
        $("#email").val("");
        $("#message").val("");
        $("#userid").val("");

    });
</script>
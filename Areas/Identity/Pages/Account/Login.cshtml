@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black border-0" style="border-radius: 25px; background-color:#e7f9fd;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Log in</p>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <form class="mx-1 mx-md-4" id="account" method="post">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.Email" id="form3Example3c" class="form-control" placeholder="Enter your email" />
                                            <label asp-for="Input.Email" class="form-label d-none" for="form3Example3c">Your Email</label>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.Password" type="password" id="form3Example4c" class="form-control" placeholder="Enter your password" />
                                            <label asp-for="Input.Password" class="form-label d-none" for="form3Example4c">Password</label>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div class="checkbox">
                                            <label asp-for="Input.RememberMe" class="form-label">
                                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                        <p>
                                            <a class="text-decoration-none" id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                                        </p>
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
                                    </div>
                                    <div class="mt-3">
                                        <p>
                                            Don't have an account yet? <a class="text-decoration-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register now</a>
                                        </p>
                                        @*
                                        <p>
                                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                        </p>
                                        *@
                                    </div>
                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="/images/ratatouille.jpg"
                                     class="img-fluid rounded-5" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@using CapstoneProject.Models;
@model IndexModel
@inject SignInManager<Account> SignInManager
@inject UserManager<Account> UserManager
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    var currentUser = await UserManager.GetUserAsync(User);
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data" >
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-default">Save</button>

            </div>
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Input.File" style="width: 100%;"></label>
                @if (Model.Input.File == null)
                {
                    <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="@currentUser.ImgPath">
                }
                <input asp-for="Input.File" class="form-control" placeholder="Your profile image" type="file" accept="image/png, image/jpeg" />
                <span asp-validation-for="Input.File" class="text-danger"></span>
            </div>
        </form>
    </div>

    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
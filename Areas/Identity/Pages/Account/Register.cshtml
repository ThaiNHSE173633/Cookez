@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<section class="vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black border-0" style="border-radius: 25px; background-color:#e7f9fd;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Register</p>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <form class="mx-1 mx-md-4" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.Username" id="form3Example1c" class="form-control" placeholder="Your username" />
                                            <label asp-for="Input.Username" class="form-label d-none" for="form3Example1c">Your Username</label>
                                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.Email" id="form3Example3c" class="form-control" placeholder="Your email" />
                                            <label asp-for="Input.Email" class="form-label d-none" for="form3Example3c">Your Email</label>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.Password" type="password" id="form3Example4c" class="form-control" placeholder="Your password" />
                                            <label asp-for="Input.Password" class="form-label d-none" for="form3Example4c">Password</label>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.ConfirmPassword" id="form3Example4cd" class="form-control" placeholder="Confirm your password" />
                                            <label asp-for="Input.ConfirmPassword" for="form3Example4cd" class="d-none">Repeat your password</label>
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-none flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" id="form3Example4cd" class="form-control">
                                             <option disabled selected>Select Role</option>
                                        </select>
                                        <span asp-validation-for="Input.Role"></span>
                                        </div>
                                    </div>
                                    <div class="form-check d-flex justify-content-center mb-3">
                                        <input asp-for="Input.AgreeTerms" class="form-check-input me-2" type="checkbox" id="form2Example3c" required/>
                                        <label asp-for="Input.AgreeTerms" class="form-check-label" for="form2Example3">
                                            I agree to all statements in <a href="/Home/Privacy" class="text-decoration-none">Terms of service</a><br />
                                            <span asp-validation-for="Input.AgreeTerms" class="text-danger"></span>
                                        </label>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" id="registerSubmit" class="w-100 btn btn-primary btn-lg">Register</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="/images/burger.jpg"
                                     class="img-fluid rounded-5" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
